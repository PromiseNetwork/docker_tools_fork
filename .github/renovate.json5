{
  "extends": ["github>thekevjames/tools:personal"],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": [
        "google/cloud-sdk",
      ],
      "automerge": true,
    },
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": [
        "library/caddy",
      ],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
    },
    {
      "matchManagers": ["dockerfile"],
      "matchFiles": ["docker-gcloud-pubsub-emulator/Dockerfile"],
      "matchPackageNames": [
        "python",
      ],
      "allowedVersions": "3.9.2",
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchPackageNames": [
        "nox",
      ],
      "automerge": true,
    },
    {
      "matchFiles": ["docker-nox/Dockerfile"],
      "matchManagers": ["dockerfile"],
      "matchPackageNames": [
        "ubuntu",
      ],
      // TODO: https://github.com/TheKevJames/tools/issues/861
      "enabled": false,
    },
  ],
}
