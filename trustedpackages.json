{
  "packageRules": [
    {
      "datasources": ["terraform"],
      "packageNames": [
        "cloudflare",
        "confluent",
        "google"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["docker"],
      "packageNames": [
        "busybox",
        "docker",
        "hashicorp/terraform"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["docker"],
      "packageNames": [
        "python"
      ],
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "packagePatterns": [
        "^coveralls$",
        "^gcloud-aio",
        "^gcloud-rest"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "packageNames": [
        "hypothesis",
        "pygments",
        "pytest",
        "pytest-asyncio",
        "pytest-cases",
        "pytest-cov",
        "pytest-datadir",
        "pytest-mock",
        "requests"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "packageNames": [
        "fastapi",
        "google-auth",
        "httpx",
        "uvicorn"
      ],
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
