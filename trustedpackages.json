{
  "packageRules": [
    {
      "datasources": ["terraform-module", "terraform-provider"],
      "matchPackageNames": [
        "cloudflare",
        "confluent",
        "confluentinc/confluent",
        "github",
        "google",
        "grafana",
        "hashicorp/cloudflare",
        "hashicorp/google",
        "hashicorp/grafana",
        "hashicorp/kubernetes",
        "integrations/github",
        "kubernetes"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["docker"],
      "packagePatterns": [
        "^thekevjames/gcloud-pubsub-emulator$"
      ],
      "updateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["docker"],
      "matchPackageNames": [
        "busybox",
        "docker",
        "hashicorp/terraform",
        "node",
        "nodejs/node",
        "pandoc/core"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["docker"],
      "matchPackageNames": [
        "python",
        "quay.io/prometheus/prometheus",
        "quay.io/prometheus/pushgateway"
      ],
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "packagePatterns": [
        "^coveralls$",
        "^gcloud-aio",
        "^gcloud-rest"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "matchPackageNames": [
        "google-api-python-client",
        "hiredis",
        "hypothesis",
        "pygments",
        "pytest",
        "pytest-asyncio",
        "pytest-cases",
        "pytest-cov",
        "pytest-datadir",
        "pytest-mock",
        "requests",
        "tqdm"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "matchPackageNames": [
        "fastapi",
        "google-auth",
        "google-cloud-bigquery",
        "httpx",
        "prometheus-client",
        "uvicorn"
      ],
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
