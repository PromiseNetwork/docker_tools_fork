{
  "packageRules": [
    {
      "matchDatasources": ["crate"],
      "matchPackageNames": [
        "chrono",
        "log",
        "serde",
        "serde_json",
        "xdg"
      ],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["crate"],
      "matchPackageNames": [
        "fern",
        "ratatui",
        "reqwest"
      ],
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "^thekevjames/gcloud-pubsub-emulator$",
        "^quay.io/thekevjames/gcloud-pubsub-emulator$"
      ],
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": [
        "^thekevjames/",
        "^quay.io/thekevjames/"
      ],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "bitnami/kube-state-metrics",
        "busybox",
        "docker",
        "hashicorp/terraform",
        "node",
        "nodejs/node",
        "pandoc/core",
        "quay.io/linuxserver.io/jellyfin",
        "quay.io/linuxserver.io/prowlarr",
        "quay.io/linuxserver.io/radarr",
        "quay.io/linuxserver.io/sonarr",
        "quay.io/linuxserver.io/syncthing",
        "quay.io/prometheus/prometheus"
      ],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/gethomepage/homepage"
      ],
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "python",
        "quay.io/prometheus/pushgateway"
      ],
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["action"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "pinDigests": true,
      "automerge": true
    },
    {
      "matchDatasources": ["pypi"],
      "matchPackagePatterns": [
        "^coveralls$",
        "^gcloud-aio",
        "^gcloud-rest"
      ],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["pypi"],
      "matchPackageNames": [
        "aiohttp",
        "fava",
        "google-api-python-client",
        "google-auth",
        "google-cloud-bigquery",
        "google-cloud-pubsub",
        "hiredis",
        "jinja2",
        "jira",
        "hypothesis",
        "prometheus-fastapi-instrumentator",
        "pydantic",
        "pydantic-settings",
        "pygments",
        "pytest",
        "pytest-asyncio",
        "pytest-cases",
        "pytest-cov",
        "pytest-datadir",
        "pytest-mock",
        "redis",
        "requests",
        "sphinx",
        "sqlalchemy",
        "tqdm"
      ],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["pypi"],
      "matchPackageNames": [
        "fastapi",
        "flask",
        "google-cloud-pubsub",
        "httpx",
        "pandas",
        "plotly",
        "prometheus-client",
        "uvicorn"
      ],
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["terraform-module", "terraform-provider"],
      "matchPackageNames": [
        "cloudflare",
        "confluent",
        "confluentinc/confluent",
        "github",
        "google",
        "grafana",
        "hashicorp/cloudflare",
        "hashicorp/google",
        "hashicorp/grafana",
        "hashicorp/kubernetes",
        "integrations/github",
        "kubernetes"
      ],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
