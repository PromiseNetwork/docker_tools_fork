{
  "packageRules": [
    {
      "datasources": ["terraform-module", "terraform-provider"],
      "packageNames": [
        "confluentinc/confluent",
        "hashicorp/cloudflare",
        "hashicorp/google",
        "hashicorp/grafana",
        "hashicorp/kubernetes",
        "integrations/github"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["docker"],
      "packageNames": [
        "busybox",
        "docker",
        "hashicorp/terraform",
        "node",
        "nodejs/node",
        "pandoc/core"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["docker"],
      "packageNames": [
        "python",
        "quay.io/prometheus/prometheus",
        "quay.io/prometheus/pushgateway"
      ],
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "packagePatterns": [
        "^coveralls$",
        "^gcloud-aio",
        "^gcloud-rest"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "packageNames": [
        "hiredis",
        "hypothesis",
        "pygments",
        "pytest",
        "pytest-asyncio",
        "pytest-cases",
        "pytest-cov",
        "pytest-datadir",
        "pytest-mock",
        "requests"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "datasources": ["pypi"],
      "packageNames": [
        "fastapi",
        "google-auth",
        "google-cloud-bigquery",
        "httpx",
        "prometheus-client",
        "uvicorn"
      ],
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
